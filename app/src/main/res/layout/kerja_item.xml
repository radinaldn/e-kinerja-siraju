<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">



                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Makan Besar"
                    android:id="@+id/tv_nama_kegiatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            <!-- TextView Nama Mahasiwa -->
            <TextView
                android:visibility="gone"
                android:text="001"
                android:id="@+id/tv_id_kegiatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- TextView Nama Mahasiwa -->


            <!-- TextView Npm Mahasiswa -->
            <TextView
                android:textStyle="bold"
                android:text="10 jam"
                android:id="@+id/tv_durasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_kategori"
                android:text="Kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00 00:00" />

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/bt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_edit"
            android:gravity="right"
            android:padding="5dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:textColor="@color/textColorWhite" />


        <ImageButton
            android:layout_margin="5dp"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:id="@+id/bt_hapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bt_delete"
            android:src="@drawable/ic_delete_black_24dp"
            android:textColor="@color/textColorPrimary" />



    </LinearLayout>

</android.support.v7.widget.CardView>