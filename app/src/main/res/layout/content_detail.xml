<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.topapp.radinaldn.e_kinerja.activities.DetailActivity"
    tools:showIn="@layout/activity_detail"
    android:padding="@dimen/activity_vertical_margin">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
            <!--android:id="@+id/iv_foto"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp" />-->

        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="ID Kerja"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:text="001"
            android:id="@+id/tv_id_kerja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Durasi"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="10 jam"
            android:id="@+id/tv_durasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Kategori"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="tupoksi"
            android:id="@+id/tv_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Kuantitas"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="10 Lembar"
            android:id="@+id/tv_kuantitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Tanggal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="2018-01-01"
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
